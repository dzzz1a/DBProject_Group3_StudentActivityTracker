-- C: CREATE (Insert a new Activity record)
INSERT INTO Activity (activityName, activityCategory, activityLocation, activityDetails, activityStartDate, activityEndDate, activityFrequency)
VALUES ('AI Workshop', 'Academic', 'Room 101', 'Introduction to Python for AI.', '2025-11-01', '2025-11-02', 'One-time');

-- R: READ (Select all Activity details)
SELECT activityID, activityName, activityCategory, activityLocation, activityStartDate, activityEndDate
FROM Activity;

-- U: UPDATE (Modify an existing Activity's location and date)
UPDATE Activity
SET activityLocation = 'Virtual Zoom Link', activityEndDate = '2025-11-03'
WHERE activityID = 10;

-- D: DELETE (Remove an Activity record)
DELETE FROM Activity
WHERE activityID = 10;
