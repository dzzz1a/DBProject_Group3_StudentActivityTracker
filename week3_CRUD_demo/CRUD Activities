-- C: CREATE (Insert a new Activity record)
INSERT INTO activity (activityName, activityCategory, activityLocation, activityStartDate, activityDetails, advisorID)
VALUES ('Data Science Club', 'Academic', 'Room 303', '2025-10-01', 'Weekly meeting to discuss machine learning.', 105);

-- R: READ (Select all Activity details)
SELECT activityID, activityName, activityCategory, activityLocation, activityStartDate
FROM activity;

-- U: UPDATE (Modify an existing Activity's location and date)
UPDATE activity
SET activityLocation = 'Main Lecture Hall', activityEndDate = '2026-03-30'
WHERE activityID = 205;

-- D: DELETE (Remove an Activity record)
DELETE FROM activity
WHERE activityID = 205;
