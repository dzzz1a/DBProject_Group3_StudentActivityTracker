-- C: CREATE (Insert a new Student record)
INSERT INTO students (studentFirstName, studentLastName, studentYear, studentEmail, studentPassword)
VALUES ('Emily', 'Jones', 'First Year', 'emily.j@school.edu', 'hashed_pw_01');

-- R: READ (Select all essential Student details)
SELECT studentID, studentFirstName, studentLastName, studentEmail, studentYear
FROM students;

-- U: UPDATE (Modify an existing Student's contact details)
UPDATE students
SET studentAddress = '100 University Ave', phoneNumber = '555-1234'
WHERE studentID = 5;

-- D: DELETE (Remove a Student record)
DELETE FROM students
WHERE studentID = 5;
