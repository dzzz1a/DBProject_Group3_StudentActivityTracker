-- C: CREATE (Insert a new Participation request)
INSERT INTO participation (studentID, activityID, dateApplied, applicationStatus)
VALUES (6, 206, DATETIME('now'), 'Pending');

-- R: READ (Select all Participation details, including status)
SELECT participationID, studentID, activityID, applicationStatus, dateApplied
FROM participation;

-- U: UPDATE (Advisor changes the application status and adds feedback)
UPDATE participation
SET applicationStatus = 'Approved', approvalDate = DATETIME('now'), advisorFeedback = 'Met all prerequisite criteria.'
WHERE participationID = 306;

-- D: DELETE (Remove a Participation record)
DELETE FROM participation
WHERE participationID = 306;
