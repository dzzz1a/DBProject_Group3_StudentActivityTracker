-- C: CREATE (Insert a new Advisor record)
INSERT INTO advisor (advisorName, advisorEmail, advisorRole, advisorPassword, availableSchedule)
VALUES ('Dr. Patel', 'patel.d@school.edu', 'Department Chair', 'hashed_pw_02', 'Office C-212 / Fri 9am-12pm');

-- R: READ (Select all Advisor details)
SELECT advisorID, advisorName, advisorEmail, advisorRole, availableSchedule
FROM advisor;

-- U: UPDATE (Modify an existing Advisor's role and schedule)
UPDATE advisor
SET advisorRole = 'Adjunct Professor', availableSchedule = 'Zoom meeting by appointment'
WHERE advisorID = 106;

-- D: DELETE (Remove an Advisor record)
DELETE FROM advisor
WHERE advisorID = 106;
