-- C: CREATE (Insert a new Advisor record)
INSERT INTO Advisor (advisorName, advisorEmail, advisorRole, status, is_admin, availableSchedule)
VALUES ('Dr. Sarah Connor', 's.connor@uni.edu', 'Professor', 'Pending', 0, 'Mon-Fri 9AM-5PM');

-- R: READ (Select all Advisor details)
SELECT advisorID, advisorName, advisorEmail, advisorRole, status, is_admin
FROM Advisor;

-- U: UPDATE (Approve an Advisor and set them as Admin)
UPDATE Advisor
SET status = 'Approved', is_admin = 1
WHERE advisorID = 5;

-- D: DELETE (Remove an Advisor record)
DELETE FROM Advisor
WHERE advisorID = 5;
